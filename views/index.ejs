<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href='/styles.css' rel='stylesheet'>
    <title>ToDo App</title>
</head>
<body>
    <div class='container'>
        <h2>A Simple ToDo List App</h2>

        <form action='/addtask' method="POST">
            <input type='text' name='newtask' placeholder="Add New Task!">
            <button>Add Task</button>

            <div class='in-progress'>
        <h2>Added Task</h2>
            
            <% for( var i=0; i < task.length; i++) { %>

                <li><input type='checkbox' name='check' value='<%= task[i] %>' />
                    <%= task[i] %> </li>
            <% } %> 
            </div>
            <button formaction="/removetask" type='submit' id='top'>Remove</button>
        </form>
        <div class='complete'>
            <h2 class='strong'>Completed Tasks</h2>
            <% for(var i = 0; i < complete.length; i++) { %>
                <li><input type="checkbox" checked><%= complete[i] %> </li>
            <% } %>
        </div>

    </div>
    
</body>
</html>